{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "QuizManagementMicroservice.Core.Services": "Debug",
      "QuizManagementMicroservice.Core.HttpClients": "Debug",
      "QuizManagementMicroservice.API.Controllers": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "QuizManagementMicroservice.Core.Services": "Debug",
        "QuizManagementMicroservice.Core.HttpClients": "Debug"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss "
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Information",
        "QuizManagementMicroservice.Core.Services": "Debug",
        "QuizManagementMicroservice.Core.HttpClients": "Debug"
      }
    },
    "File": {
      "Path": "logs/log-.txt",
      "LogLevel": {
        "Default": "Information",
        "QuizManagementMicroservice.Core.Services": "Debug",
        "QuizManagementMicroservice.Core.HttpClients": "Debug",
        "QuizManagementMicroservice.API.Controllers": "Information"
      },
      "RollingInterval": "Day",
      "MaxFileSize": 10485760, 
      "MaxRetainedFiles": 7
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=$MSSQL_SERVER;Database=$MSSQL_DB;User Id=sa;Password=$MSSQL_PASSWORD;TrustServerCertificate=true;"
  }
}